<script>
    // Toggle dropdown
    document.addEventListener("DOMContentLoaded", function () {
        const dropdownToggle = document.querySelector(".admin button");
        const dropdownMenu = document.querySelector(".admin .hidden");

        dropdownToggle.addEventListener("click", function () {
            dropdownMenu.classList.toggle("hidden");
        });

        // Hide dropdown when clicking outside
        document.addEventListener("click", function (event) {
            if (!dropdownToggle.contains(event.target)) {
                dropdownMenu.classList.add("hidden");
            }
        });
    });
    const nameError = document.getElementById('nameError')
        const imageError = document.getElementById('imageError')
        const urlError = document.getElementById('urlError')

        function validateForm() {
            console.log("hello")
            const nameField = document.getElementById('name');
            const imageField = document.getElementById('image');
            const urlField = document.getElementById('url');
            let error = false;

            // Clear previous error styles
            nameField.classList.remove('border-red-500');
            imageField.parentElement.classList.remove('border-red-500');
            urlField.parentElement.classList.remove('border-red-500');

            // Validate Name Field
            if (nameField.value.trim() === '') {
                nameField.classList.add('border', 'border-red-300');
                nameError.innerHTML = 'Name is required'
                error = true;
            }

            // Validate Image Field
            const imagePreview = document.getElementById('image-preview');
            const imageSvg = imagePreview.querySelector('svg');
            if (imageSvg && imageSvg.parentNode !== null) {
                imageField.parentElement.classList.add('border', 'border-red-300');
                imageError.innerHTML = 'Image is required'
                error = true;
            }
            if (urlField.value.trim() === '') {
                urlField.classList.add('border', 'border-red-300');
                urlError.innerHTML = 'Url is required'
                error = true;
            }

            // Focus on the first error field
            if (error) {
                if (nameField.value.trim() === '') {
                    nameField.focus();
                } else if (urlField.value.trim() === '') {
                    urlField.focus();
                } else {
                    imageField.focus();
                }
                return false;
            }

            return true;
        }
</script>